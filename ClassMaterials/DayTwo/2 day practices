# ex 4 - do we need to close everytime?  Examples online do not.

def encrypt(message):
	message=input("Enter message to be encrypted")
	shiftvalue=input("Enter shift value")
	encryptedmessage=""

	for character in message:
		x = ord(character) -97
		x += shiftvalue
		encryptedmessage += chr(x)

	print (encryptedmessage)
encrypt ()



